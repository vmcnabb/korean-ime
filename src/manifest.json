{
    "name": "Korean IME",
    "version": "1.1.0",
    "manifest_version": 2,
    "description": "Allows one to type in Korean Hangeul and includes a rudimentary romanization tool.",
    "icons": {
        "16": "images/icon16h.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "background": {
        "scripts": [
            "mappings.js",
            "composition.js",
            "hangeulConverter.js",
            "background.js"
        ]
    },
    "page_action": {
        "default_icon": "images/icon16a.png",
        "default_title": "Hangeul Tools"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": [
                "mappings.js",
                "composition.js",
                "selectionEditor.js",
                "KoreaIME.js",
                "hook.js"
            ],
            "run_at": "document_end",
            "all_frames": true
        }
    ],
    "permissions": [
        "tabs",
        "contextMenus"
    ]
}
