{
    "manifest_version": 2,
    "name": "Korean IME",
    "version": "1.1.5",
    "description": "Allows one to type in Korean Hangeul and includes a rudimentary romanization tool.",
    "icons": {
        "16": "images/icon16h.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "browser_action": {
        "default_icon": "images/icon16a.png",
        "default_title": "Korean IME"
    },
    "author": "Vincent McNabb",
    "background": {
        "scripts": [ "background.js" ]
    },
    "content_scripts": [
        {
            "matches": [ "<all_urls>" ],
            "match_about_blank": true,
            "all_frames": true,
            "js": [ "content.js" ],
            "run_at": "document_end"
        }
    ],
    "permissions": [
        "tabs",
        "contextMenus"
    ],
    "offline_enabled": true
}
